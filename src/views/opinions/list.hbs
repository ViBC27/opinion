<div class="container p-4">
    <div class="row">
        {{#each opinionsGeted}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="card-title text-uppercase">
                        {{title}}
                    </h3>
                    <p class="m-2">{{description}}</p>
                    <p>{{timeago createdAt}}</p>
                    <a href="/opinions/delete/{{id}}" class="btn btn-danger">Delete</a>
                    <a href="/opinions/edit/{{id}}" class="btn btn-secondary">Edit</a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No opinions</p>
                <a href="/opinions/add">Create one</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>
